<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="?attr/colorOnPrimary"
    app:cardPreventCornerOverlap="false"
    app:cardElevation="5dp"
    app:cardCornerRadius="3dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/keyim"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginStart="20dp"
            app:srcCompat="@drawable/baseline_key_24" />
        <TextView
            android:id="@+id/commonname"
            android:layout_below="@id/keyim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text = "FIDO2 Key"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="15sp"
            />
        <TextView
            android:id="@+id/created"
            android:text="Created on 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/commonname"
            android:layout_marginStart="20dp"
            android:drawablePadding="2dp"
            android:textColor="#000000"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/last"
            android:text="Last used on 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/created"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="2dp"
            android:textColor="#000000"
            android:textSize="13sp"
            />
        <TextView
            android:id="@+id/credid"
            android:text="Last used on 10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/last"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="5dp"
            android:drawablePadding="2dp"
            android:textColor="#000000"
            android:visibility="gone"
            android:textSize="13sp"
            />
        <ImageView
            android:id="@+id/del"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_toRightOf="@id/last"
            android:layout_marginTop="10dp"
            android:layout_marginStart="100dp"
            android:layout_alignParentRight="true"
            app:srcCompat="@drawable/baseline_delete_24" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
